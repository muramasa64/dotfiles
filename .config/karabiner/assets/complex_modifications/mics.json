{
    "title": "Mics",
    "rules": [
        {
            "description": "Ctrl+M to return",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option"
                            ]
                        }
                    },
                    "to": [
                      {
                          "key_code": "return_or_enter"
                      }
                    ]
                }
            ]
        },
        {
            "description": "Ctrl+H to Delete",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock",
                                "shift",
                                "option"
                            ]
                        }
                    },
                    "to": [
                      {
                          "key_code": "delete_or_backspace"
                      }
                    ]
                }
            ]
        }
    ]
}

